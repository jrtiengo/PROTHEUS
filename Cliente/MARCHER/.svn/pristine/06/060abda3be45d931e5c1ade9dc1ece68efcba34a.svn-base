User Function GAT_CLIENTE(cTIPO,cCLIENTE,cLOJA)

Local _cliefor:=""

If cTIPO == "B" .OR. cTIPO == "D"
	_cliefor:= POSICIONE("SA2",1,XFILIAL("SA2")+cCLIENTE+cLOJA,"A2_NOME")
Else
	_cliefor:= POSICIONE("SA1",1,XFILIAL("SA1")+cCLIENTE+cLOJA,"A1_NOME")
EndIf

Return(_cliefor)