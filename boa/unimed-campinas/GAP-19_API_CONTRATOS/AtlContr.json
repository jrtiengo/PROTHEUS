{
	"title": "Inclusao de Contratos",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"required": [
		"cnpj",
		"contrato",
		"tiporev",
		"justif"
	],
	"properties": {
		"cnpj": {
			"description": "CNPJ da empresa destino",
			"type": "string",
			"minLength": 14,
			"maxLength": 14
		},
		"contrato": {
			"description": "Numero do Contrato",
			"type": "string",
			"minLength": 15,
			"maxLength": 15
		},
		"tiporev": {
			"description": "informar o tipo da revisao",
			"type": "string",
			"minLength": 3,
			"maxLength": 3
		},
		"justif": {
			"description": "informar a justificativa para revisao",
			"type": "string",
			"minLength": 300,
			"maxLength": 300
		},
		"CN9_XDTORI": {
			"description": "informar a data original de inicio do contrato, conforme minuta, para contratos Legado",
			"type": "string",
			"minLength": 10,
			"maxLength": 10
		},
		"CN9_XCLICO": {
			"description": "informar o cliente confederacao",
			"type": "string",
			"minLength": 6,
			"maxLength": 6
		},
		"CN9_XLOJCO": {
			"description": "informar a loja confederacao",
			"type": "string",
			"minLength": 2,
			"maxLength": 2
		},
		"CN9_UNVIGE": {
			"description": "informar a unidade de vigência do contrato",
			"type": "string",
			"minLength": 1,
			"maxLength": 1
		},
		"CN9_VIGE": {
			"description": "informar a quantidade da vigência, conforme o tipo",
			"type": "integer",
			"minLength": 1,
			"maxLength": 6
		},
		"CN9_CONDPG": {
			"description": "informar a condição de pagamento do contrato",
			"type": "string",
			"minLength": 3,
			"maxLength": 3
		},
		"CN9_FLGREJ": {
			"description": "contrato pode ser reajustado?",
			"type": "string",
			"minLength": 1,
			"maxLength": 1
		},
		"CN9_INDICE": {
			"description": "se reajuste igual a sim, informar o indice a ser aplicado",
			"type": "string",
			"minLength": 3,
			"maxLength": 3
		},
		"CN9_FLGCAU": {
			"description": "contrato tem caucao",
			"type": "string",
			"minLength": 1,
			"maxLength": 1
		},
		"CN9_OBJCTO": {
			"description": "informar o texto referente ao objeto do contrato",
			"type": "string",
			"minLength": 300,
			"maxLength": 300
		},
		"CN9_ALTCLA": {
			"description": "informar o texto referente a clausula do contrato",
			"type": "string",
			"minLength": 300,
			"maxLength": 300
		},
		"CN9_APROV": {
			"description": "grupo de aprovação para controle de alçada do contrato",
			"type": "string",
			"minLength": 6,
			"maxLength": 6
		},
		"CN9_GRPAPR": {
			"description": "grupo de aprovação para controle de alcada das medicoes",
			"type": "string",
			"minLength": 6,
			"maxLength": 6
		},
		"CN9_NATURE": {
			"description": "natureza do contrato",
			"type": "string",
			"minLength": 10,
			"maxLength": 10
		},
		"CN9_DEPART": {
			"description": "Area do contrato - para controle de acesso e envio de WF",
			"type": "string",
			"minLength": 6,
			"maxLength": 6
		},
		"CN9_PERI": {
			"description": "periodiciodade do reajuste",
			"type": "integer",
			"minLength": 1,
			"maxLength": 6
		},
		"CN9_UNPERI": {
			"description": "unidade de periodicidade do reajuste",
			"type": "string",
			"minLength": 1,
			"maxLength": 1
		},
		"CN9_MODORJ": {
			"description": "Modo Reajuste",
			"type": "string",
			"minLength": 1,
			"maxLength": 1
		},
		"CN9_PRORAT": {
			"description": "reajuste é pro rata?",
			"type": "string",
			"minLength": 1,
			"maxLength": 1
		},
		"CNC_CODIGO": {
			"description": "codigo do fornecedor do contrato",
			"type": "string",
			"minLength": 6,
			"maxLength": 6
		},
		"CNC_LOJA": {
			"description": "loja do fornecedor do contrato",
			"type": "string",
			"minLength": 2,
			"maxLength": 2
		},
		"CNA_VLTOT": {
			"description": "Valor Total",
			"type": "integer",
			"minLength": 2,
			"maxLength": 14
		},
		"itens": {
			"type": "array",
			"items": [
				{
					"type": "object",
					"properties": {
						"CNB_PRODUT": {
							"description": "Produto",
							"type": "string",
							"minLength": 12,
							"maxLength": 12
						},
						"CNB_QUANT": {
							"description": "Quantidade",
							"type": "integer",
							"minLength": 2,
							"maxLength": 12
						},
						"CNB_VLUNIT": {
							"description": "Valor Unitario",
							"type": "integer",
							"minLength": 2,
							"maxLength": 14
						},
						"CNB_CONTA": {
							"description": "Conta Contabil",
							"type": "string",
							"minLength": 20,
							"maxLength": 20
						},
						"CNB_TE": {
							"description": "Tipo Entrada",
							"type": "string",
							"minLength": 3,
							"maxLength": 3
						},
						"CNB_CC": {
							"description": "Centro Custo",
							"type": "string",
							"minLength": 9,
							"maxLength": 9
						}
					},
					"required": [
						"CNB_PRODUT",
						"CNB_QUANT",
						"CNB_VLUNIT",
						"CNB_CONTA",
						"CNB_TE",
						"CNB_CC"
					]
				}
			]
		},
		"Cronograma": {
			"type": "array",
			"items": [
				{
					"type": "object",
					"properties": {
						"CRG_NPERIO": {
							"description": "Numero Periodo",
							"type": "integer",
							"minLength": 1,
							"maxLength": 1
						},
						"CRG_NDIAS": {
							"description": "Numero de dias para as parcelas",
							"type": "integer",
							"minLength": 2,
							"maxLength": 2
						},
						"CRG_NULTDI": {
							"description": "Ultimo dia do medicoes",
							"type": "integer",
							"minLength": 1,
							"maxLength": 1
						},
						"CRG_CDTCOM": {
							"description": "Competencia do inicio do Programa",
							"type": "string",
							"minLength": 7,
							"maxLength": 7
						},
						"CRG_DTPREV": {
							"description": "DT prevista para primeira parcela",
							"type": "string",
							"minLength": 1,
							"maxLength": 1
						},
						"CRG_NPARC": {
							"description": "Numero das Parcelas",
							"type": "string",
							"minLength": 3,
							"maxLength": 3
						},
						"CRG_CCOND": {
							"description": "Condicao de Pagto",
							"type": "string",
							"minLength": 3,
							"maxLength": 3
						},
						"CRG_NTXJUR": {
							"description": "Taxa de Juros",
							"type": "integer",
							"minLength": 4,
							"maxLength": 3
						}
					},
					"required": []
				}
			]
		}
	}
}