//ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ

Private cCadastro := "Liberação de Pedidos de venda Bloqueados pelo Quoting"

Private aRotina := { {"Pesquisar"	,"AxPesqui",0,1} ,;
 	        	     {"Visualizar"	,"U_VISQTG",0,2} ,;
    		         {"Liberar"		,"U_LIBQTG",0,3} }

Private cDelFunc := ".F." // Validacao para a exclusao. Pode-se utilizar ExecBlock

Private cString := "SC6"

dbSelectArea("SC6")
dbSetOrder(1)

aCampos := {	{"PedVenda"			,"C6_NUM" 	  },;
				{"Itm"				,"C6_ITEM"	  },;
				{"Codigo"			,"C6_PRODUTO" },;
				{"Descricao"		,"C6_DESCRI"  },;
				{"Unid"				,"C6_UM"	  },;
				{"QtdVend"			,"C6_QTDVEN"  },;
				{"R$_Unid"			,"C6_PRCVEN"  },;
				{"R$_Total"			,"C6_VALOR"	  },;
				{"Custo_R$_Unid"	,"C6_QTGMIN"  },;
				{"Margem_Perc. "	,"C6_VALOR"	  },;
				{"BloqQTG"  		,"C6_BLQ"	  }	}

				
dbSelectArea(cString)
Set Filter to C6_BLQ = 'S'
dbGoTop()
mBrowse( 6,1,22,75,cString,aCampos)

Return


